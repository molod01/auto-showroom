<%- layout('layouts/layout.ejs')%>
	<% 
		const loginError = errors.find(e=> e.param === 'login');
		const passwordError = errors.find(e => e.param === 'password');
		const confirmPasswordError = errors.find(e => e.param === 'confirmPassword');
	%>
	<div class="w-50 m-auto pt-5">
		<form method="post">
			<div class="mb-3">
				<% if (loginError) { %>
					<div class="text-danger">
						<%= loginError.msg %>
					</div>
					<% } %>
						<% if (alreadyExists) { %>
							<div class="text-danger">Login already exists</div>
							<% } %>
								<label for="login" class="form-label">Login</label>
								<input type="text" class="form-control" id="login" name="login" />
			</div>
			<div class="mb-3">
				<% if (passwordError) { %>
					<div class="text-danger">
						<%= passwordError.msg %>
					</div>
					<% } %>
						<label for="password" class="form-label">Password</label>
						<input type="password" class="form-control" id="password" name="password" />
			</div>
			<div class="mb-3">
				<% if (confirmPasswordError) { %>
					<div class="text-danger">
						<%= confirmPasswordError.msg %>
					</div>
					<% } %>
						<label for="confirmPassword" class="form-label">Confirm password</label>
						<input type="password" class="form-control" id="confirmPassword" name="confirmPassword" />
			</div>
			<div class="mb-3 form-check">
				<input type="checkbox" class="form-check-input" id="rememberMe" name="rememberMe" />
				<label class="form-check-label" for="rememberMe">Remember me</label>
			</div>
			<button type="submit" class="btn btn-outline-dark w-100">Register</button>
		</form>
	</div>